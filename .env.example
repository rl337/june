# June Agent Configuration
# Copy this file to .env and update the values

# =============================================================================
# CRITICAL: Data and Model Directories
# =============================================================================
# These directories will grow very large and are excluded from git
JUNE_DATA_DIR=/home/rlee/june_data
MODEL_CACHE_DIR=/home/rlee/models
HUGGINGFACE_CACHE_DIR=/home/rlee/models/huggingface
TRANSFORMERS_CACHE_DIR=/home/rlee/models/transformers

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=june
POSTGRES_USER=june
POSTGRES_PASSWORD=changeme
POSTGRES_URL=postgresql://june:changeme@postgres:5432/june

# =============================================================================
# MinIO Object Storage Configuration
# =============================================================================
MINIO_ENDPOINT=minio:9000
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=changeme
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=changeme

# =============================================================================
# NATS Message Broker Configuration
# =============================================================================
NATS_URL=nats://nats:4222

# =============================================================================
# Authentication & Security
# =============================================================================
# CRITICAL: Change this secret in production!
JWT_SECRET=change-this-secret-key

# =============================================================================
# External Service Tokens
# =============================================================================
# Telegram Bot Token (required for Telegram integration)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Hugging Face Token (required for model downloads)
HUGGINGFACE_TOKEN=your_huggingface_token_here

# Optional: External API Keys
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
TOGETHER_API_KEY=

# =============================================================================
# Model Configuration
# =============================================================================
MODEL_NAME=Qwen/Qwen3-30B-A3B-Thinking-2507
MODEL_DEVICE=cuda:0
MAX_CONTEXT_LENGTH=131072
USE_YARN=true

# STT (Speech-to-Text) Configuration
STT_MODEL=openai/whisper-large-v3
STT_DEVICE=cuda:0

# TTS (Text-to-Speech) Configuration
TTS_MODEL=facebook/fastspeech2-en-ljspeech
TTS_DEVICE=cuda:0

# =============================================================================
# GPU Configuration (NVIDIA DGX Spark)
# =============================================================================
CUDA_VISIBLE_DEVICES=0
CUDA_MPS_ENABLE_PER_CTX_SM_PARTITIONING=1

# =============================================================================
# Service URLs and Endpoints
# =============================================================================
# Gateway Service
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8000
GATEWAY_URL=http://gateway:8000

# Inference API Service
INFERENCE_API_URL=grpc://inference-api:50051

# STT Service
STT_URL=grpc://stt:50052

# TTS Service
TTS_URL=grpc://tts:50053

# Webapp Configuration
REACT_APP_GATEWAY_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# =============================================================================
# Monitoring and Observability
# =============================================================================
# Prometheus
PROMETHEUS_URL=http://prometheus:9090

# Grafana
GRAFANA_URL=http://grafana:3000
GRAFANA_PASSWORD=admin

# Loki
LOKI_URL=http://loki:3100

# Jaeger
JAEGER_URL=http://jaeger:16686
JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# =============================================================================
# Logging and Debugging
# =============================================================================
LOG_LEVEL=INFO
ENABLE_TRACING=true
ENABLE_METRICS=true

# =============================================================================
# Development and Testing
# =============================================================================
# Set to 'development' for local development, 'production' for deployment
ENVIRONMENT=development

# Enable debug mode (more verbose logging)
DEBUG=false

# Test user for health checks
TEST_USER_ID=test_user
